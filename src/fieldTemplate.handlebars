@prefix crm: <http://www.cidoc-crm.org/cidoc-crm/> .
@prefix ldp: <http://www.w3.org/ns/ldp#> .
@prefix rsfield: <http://www.researchspace.org/resource/system/fields/> .
@prefix mpfield: <http://www.metaphacts.com/ontology/fields#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sp: <http://spinrdf.org/sp#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rsuser: <http://www.researchspace.org/resource/user/> .
@prefix mpuser: <http://www.metaphacts.com/resource/user/> .

<http://www.researchspace.org/resource/system/fieldDefinitionContainer/context> {
  <http://www.researchspace.org/resource/system/fieldDefinitionContainer> rdfs:comment "Container to store field definitions.";
    a ldp:Container, ldp:Resource, prov:Entity ;
    rdfs:label "Form Container";
    prov:wasAttributedTo rsuser:admin ;
    prov:generatedAtTime "2020-04-06T13:49:19.238+03:00"^^xsd:dateTime .
}

<http://www.metaphacts.com/ontologies/platform#fieldDefinitionContainer/context> {
  <http://www.metaphacts.com/ontologies/platform#fieldDefinitionContainer> rdfs:comment "Container to store field definitions.";
    a ldp:Container, ldp:Resource, prov:Entity ;
    rdfs:label "Form Container";
    prov:wasAttributedTo mpuser:admin;
    prov:generatedAtTime "2020-04-06T13:49:19.238+03:00"^^xsd:dateTime .
}

{{#each fields}}

    <{{ ../prefix }}{{ id }}/context> {

        <http://www.researchspace.org/resource/system/fieldDefinitionContainer> ldp:contains <{{ ../prefix }}{{ id }}> .
        <http://www.metaphacts.com/ontologies/platform#fieldDefinitionContainer> ldp:contains <{{ ../prefix }}{{ id }}> .

        <{{ ../prefix }}{{ id }}> 
        {{#if label}}
            rdfs:label "{{ label }}" ;
        {{/if}}
        {{#if description}}
            rdfs:comment "{{ description }}" ;
        {{/if}}
        {{#if minOccurs}}
            rsfield:minOccurs "{{ minOccurs }}" ; 
            mpfield:minOccurs "{{ minOccurs }}" ;
        {{/if}}
        {{#if maxOccurs}}
            rsfield:maxOccurs "{{ maxOccurs }}" ; 
            mpfield:maxOccurs "{{ maxOccurs }}" ;
        {{/if}}
        {{#if datatype}}
            rsfield:xsdDatatype {{ datatype }} ; 
            mpfield:xsdDatatype {{ datatype }} ;
        {{/if}}
        {{#if domain}}
            rsfield:domain {{ domain }} ; 
            mpfield:domain {{ domain }} ;
        {{/if}}
        {{#if range}}
            rsfield:range {{ range }} ; 
            mpfield:range {{ range }} ;
        {{/if}}
        {{#each queries }}
            {{#if insert}}
                rsfield:insertPattern <{{ ../../prefix }}{{../id}}/query/insert> ; mpfield:insertPattern <{{ ../../prefix }}{{../id}}/query/insert> ;
            {{/if}}
            {{#if select}}
                rsfield:selectPattern <{{ ../../prefix }}{{../id}}/query/select> ; mpfield:selectPattern <{{ ../../prefix }}{{../id}}/query/select> ;
            {{/if}}
            {{#if ask}}
                rsfield:askPattern <{{ ../../prefix }}{{../id}}/query/ask> ; mpfield:askPattern <{{ ../../prefix }}{{../id}}/query/ask> ;
            {{/if}}
            {{#if delete}}
                rsfield:deletePattern <{{ ../../prefix }}{{../id}}/query/delete> ; mpfield:deletePattern <{{ ../../prefix }}{{../id}}/query/delete> ;
            {{/if}}
            {{#if values}}
                rsfield:valueSetPattern <{{ ../../prefix }}{{../id}}/query/values> ; mpfield:valueSetPattern <{{ ../../prefix }}{{../id}}/query/values> ;
            {{/if}}
        {{/each}}
    
        a rsfield:Field, mpfield:Field, ldp:Resource, prov:Entity ;
        prov:wasAttributedTo rsuser:admin ;
        prov:generatedAtTime "2021-01-08T11:43:46.111Z"^^xsd:dateTime .

        {{#each queries }}
            {{#if insert}}
                <{{ ../../prefix }}{{../id}}/query/insert> a sp:Query;
                    sp:text """{{ insert }}""" .
            {{/if}}
            {{#if select}}
                <{{ ../../prefix }}{{../id}}/query/select> a sp:Query;
                    sp:text """{{ select }}""" .
            {{/if}}
            {{#if ask}}
                <{{ ../../prefix }}{{../id}}/query/ask> a sp:Query;
                    sp:text """{{ ask }}""" .
            {{/if}}
            {{#if delete}}
                <{{ ../../prefix }}{{../id}}/query/delete> a sp:Query;
                    sp:text """{{ delete }}""" .
            {{/if}}
            {{#if values}}
                <{{ ../../prefix }}{{../id}}/query/values> a sp:Query;
                    sp:text """{{ values }}""" .
            {{/if}}
        {{/each}}
    
    }
{{/each}}