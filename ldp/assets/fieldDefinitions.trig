@prefix mpo: <http://www.metaphacts.com/ontology/fields> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sp: <http://spinrdf.org/sp#> .


    <http://rs.swissartresearch.net/instances/fields/creator_of_object/context> {

        <http://rs.swissartresearch.net/instances/fields/creator_of_object> 
            rdfs:label "Creator" ;
            rdfs:comment "The creator of the artwork" ;
                mpo:insertPattern <http://rs.swissartresearch.net/instances/fields/creator_of_object/query/insert> ;
                mpo:selectPattern <http://rs.swissartresearch.net/instances/fields/creator_of_object/query/select> ;
    
        a mpo:Field .

                <http://rs.swissartresearch.net/instances/fields/creator_of_object/query/insert> a sp:Query;
                    sp:text """INSERT {  ?creation crm:P14_carried_out_by $value . } WHERE { BIND(CONCAT(STR($subject), &quot;/creation&quot;) as ?creation) }""" .
                <http://rs.swissartresearch.net/instances/fields/creator_of_object/query/select> a sp:Query;
                    sp:text """SELECT ?value ?label WHERE { $subject crm:P128_carries/crm:P94i_was_created_by/crm:P14_carried_out_by $value. ?value rdfs:label ?label. }""" .
    
    }

    <http://rs.swissartresearch.net/instances/fields/label/context> {

        <http://rs.swissartresearch.net/instances/fields/label> 
            rdfs:label "Label" ;
            rdfs:comment "A human-readable label for the entity" ;
            mpo:minOccurs "1" ;
            mpo:maxOccurs "1" ;
                mpo:insertPattern <http://rs.swissartresearch.net/instances/fields/label/query/insert> ;
                mpo:selectPattern <http://rs.swissartresearch.net/instances/fields/label/query/select> ;
    
        a mpo:Field .

                <http://rs.swissartresearch.net/instances/fields/label/query/insert> a sp:Query;
                    sp:text """INSERT {  $subject rdfs:label $value . } WHERE {}""" .
                <http://rs.swissartresearch.net/instances/fields/label/query/select> a sp:Query;
                    sp:text """SELECT ?value WHERE { $subject rdfs:label ?value . }""" .
    
    }

    <http://rs.swissartresearch.net/instances/fields/object_carries_visual_item/context> {

        <http://rs.swissartresearch.net/instances/fields/object_carries_visual_item> 
            rdfs:label "Visual Item" ;
            rdfs:comment "The E36 Visual Item carried by the E22 Human-Made Object" ;
            mpo:minOccurs "1" ;
            mpo:maxOccurs "1" ;
            mpo:domain <crm:E22_Man-Made_Object> ;
            mpo:range <crm:E36_Visual_item> ;
                mpo:insertPattern <http://rs.swissartresearch.net/instances/fields/object_carries_visual_item/query/insert> ;
                mpo:selectPattern <http://rs.swissartresearch.net/instances/fields/object_carries_visual_item/query/select> ;
    
        a mpo:Field .

                <http://rs.swissartresearch.net/instances/fields/object_carries_visual_item/query/insert> a sp:Query;
                    sp:text """INSERT { $subject crm:P128_carries $value} WHERE {}""" .
                <http://rs.swissartresearch.net/instances/fields/object_carries_visual_item/query/select> a sp:Query;
                    sp:text """SELECT ?value ?label WHERE { $subject crm:P128_carries ?value. ?value a crm:E36_Visual_Item. }""" .
    
    }
